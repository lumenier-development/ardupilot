# hw definition file for processing by chibios_hwdef.py
# for Lumenier LUX H743 - NDAA

# MCU class and specific type
MCU STM32H7xx STM32H743xx

# crystal frequency
OSCILLATOR_HZ 8000000

# ChibiOS system timer
STM32_ST_USE_TIMER 5

# board ID for firmware load
APJ_BOARD_ID 2546

# bootloader takes first sector
FLASH_RESERVE_START_KB 128

# flash size
FLASH_SIZE_KB 2048
env OPTIMIZE -Os

# order of UARTs (and USB)
SERIAL_ORDER OTG1 USART2 USART3 USART1 UART5 UART4 UART7 UART8
define AP_FEATURE_RTSCTS 1

# now we define the pins that USB is connected on
PA11 OTG_FS_DM OTG1
PA12 OTG_FS_DP OTG1

# these are the pins for SWD debugging with a STlinkv2 or black-magic probe
PA13 JTMS-SWDIO SWD
PA14 JTCK-SWCLK SWD

# SPI1 - FLASH
PA5 SPI1_SCK SPI1
PA6 SPI1_MISO SPI1
PA7 SPI1_MOSI SPI1
PA4 FLASH_CS CS

# SPI2 - SD CARD
PB10 SPI2_SCK SPI2
PC2  SPI2_MISO SPI2
PC3  SPI2_MOSI SPI2
PB11 SDCARD_CS CS
PE15 SD_DETECT INPUT

# SPI3 - ICM-45686 GYRO
PC10 SPI3_SCK SPI3
PC11 SPI3_MISO SPI3
PC12 SPI3_MOSI SPI3
PA15 ICM45686_CS CS
PD10 DRDY1_ICM45686 INPUT

# SPI4 - OSD
PE2 SPI4_SCK SPI4
PE5 SPI4_MISO SPI4
PE6 SPI4_MOSI SPI4
PE4 AT7456E_CS CS

# SPI6 - ICM-42688-P GYRO
PB3 SPI6_SCK SPI6
PB4 SPI6_MISO SPI6
PB5 SPI6_MOSI SPI6
PD7 ICM42688_CS CS
PC13 DRDY1_ICM42688 INPUT

# I2C buses
PB8 I2C1_SCL I2C1
PB9 I2C1_SDA I2C1

PB6 I2C4_SCL I2C4
PB7 I2C4_SDA I2C4

# order of I2C buses
I2C_ORDER I2C1 I2C4
define HAL_I2C_INTERNAL_MASK 1

# UARTs

# USART1 for GPS1
PA10 USART1_RX USART1
PA9  USART1_TX USART1

# USART2 for TELEM1
PD6 USART2_RX USART2
PD5 USART2_TX USART2
PD4 USART2_RTS USART2
PD3 USART2_CTS USART2

# USART3 for TELEM2
PD9  USART3_RX USART3
PD8  USART3_TX USART3
PB14 USART3_RTS USART3
PD11 USART3_CTS USART3

# UART4 spare UART
PA1 UART4_RX UART4 NODMA
PA0 UART4_TX UART4 NODMA
define DEFAULT_SERIAL5_PROTOCOL SerialProtocol_MSP_DisplayPort

# UART5 for GPS2
PB12 UART5_RX UART5 NODMA
PB13 UART5_TX UART5 NODMA

# UART7 for RCinput
PE7 UART7_RX UART7
PE8 UART7_TX UART7
define DEFAULT_SERIAL6_PROTOCOL SerialProtocol_RCIN

# UART8 for ESC telemetry
PE0 UART8_RX UART8 NODMA
PE1 UART8_TX UART8 NODMA
define DEFAULT_SERIAL7_PROTOCOL SerialProtocol_ESCTelemetry

# PWM AUX channels
PE9   TIM1_CH1 TIM1 PWM(1) GPIO(50) BIDIR
PE11  TIM1_CH2 TIM1 PWM(2) GPIO(51)
PE13  TIM1_CH3 TIM1 PWM(3) GPIO(52) BIDIR
PE14  TIM1_CH4 TIM1 PWM(4) GPIO(53)
PC6   TIM8_CH1 TIM8 PWM(5) GPIO(54) BIDIR
PC7   TIM8_CH2 TIM8 PWM(6) GPIO(55)
PC8   TIM8_CH3 TIM8 PWM(7) GPIO(56) BIDIR
PC9   TIM8_CH4 TIM8 PWM(8) GPIO(57)
PD12  TIM4_CH1 TIM4 PWM(9) GPIO(58)
PD13  TIM4_CH2 TIM4 PWM(10) GPIO(59)
PD14  TIM4_CH3 TIM4 PWM(11) GPIO(60)
PD15  TIM4_CH4 TIM4 PWM(12) GPIO(61)
PB0   TIM3_CH3 TIM3 PWM(13) GPIO(62) # for WS2812 LED

# PWM output for buzzer
# Buzzer disabled, not enough timers!
# PA8 TIM1_CH1 TIM1 GPIO(77) ALARM

# RC input (PPM)
PA2 TIM2_CH3 TIM2 RCININT PULLDOWN LOW

# Camera switch control - should be low at startup to ensure Camera 1 selected
PB1 CAM_CTRL OUTPUT LOW GPIO(81)
define RELAY1_PIN_DEFAULT 81

# VTX Power control - should be low at startup to ensure power
PB2 VTX_PWR OUTPUT LOW GPIO(82)
define RELAY2_PIN_DEFAULT 82

define AP_HAL_SHARED_DMA_ENABLED 1
DMA_PRIORITY TIM1* TIM8* SPI6* SPI3* USART2* UART7* USART1* ADC* TIM4* TIM3*

# analog in
PC0 BATT_VOLTAGE_SENS ADC1 SCALE(1)
PC1 BATT_CURRENT_SENS ADC1 SCALE(1)
PC4 SPARE1_ADC1 ADC1 SCALE(1)  # Airspeed sense
PC5 RSSI_IN ADC1 SCALE(1)
define HAL_BATT_VOLT_PIN 10
define HAL_BATT_CURR_PIN 11
define HAL_BATT_VOLT_SCALE 10.1
define HAL_BATT_CURR_SCALE 17.0

# CAN bus
PD0 CAN1_RX CAN1
PD1 CAN1_TX CAN1

# SPI devices
SPIDEV dataflash SPI1 DEVID1 FLASH_CS     MODE3  32*MHZ  32*MHZ
SPIDEV sdcard    SPI2 DEVID2 SDCARD_CS    MODE0  400*KHZ 25*MHZ
SPIDEV icm45686  SPI3 DEVID1 ICM45686_CS  MODE3  2*MHZ   8*MHZ
SPIDEV osd       SPI4 DEVID1 AT7456E_CS   MODE0  10*MHZ  10*MHZ
SPIDEV icm42688  SPI6 DEVID1 ICM42688_CS  MODE3  2*MHZ   8*MHZ

# ICM-42688P
# Need to verify rotation
IMU Invensensev3 SPI:icm42688 ROTATION_YAW_90

# ICM-45686
# Need to verify rotation
IMU Invensensev3 SPI:icm45686 ROTATION_NONE

# One Barometer
BARO DPS310 I2C:0:0x76

# Compass
COMPASS IIS2MDC I2C:0:0x1E false ROTATION_ROLL_180_YAW_90
define HAL_PROBE_EXTERNAL_I2C_COMPASSES
define AP_COMPASS_IIS2MDC_ENABLED 1

# LED
define AP_NOTIFY_GPIO_LED_1_ENABLED 1
PE3 LED0 OUTPUT LOW GPIO(90) # blue
define AP_NOTIFY_GPIO_LED_1_PIN 90

# filesystem setup on sdcard
define HAL_OS_FATFS_IO 1
# Use last 2 pages for flash storage
# H743 has 16 pages of 128k each
STORAGE_FLASH_PAGE 14
define HAL_STORAGE_SIZE 32768

# setup for OSD
define OSD_ENABLED 1
define HAL_OSD_TYPE_DEFAULT 1
ROMFS_WILDCARD libraries/AP_OSD/fonts/font0.bin
